extends layout

block content
    h1 Test API
    div
        div#content.content
        .jumbotron
            .container
                p Click the "Test" button to send an Ajax request to /api/test. If you are authenticated, the data will be displayed
                .btn-group
                    button#test.btn.btn-primary(type="button") Test
                    button#events.btn.btn-primary(type="button") Events
                    button#logout.btn.btn-primary(type="button") Logout
    .well
        p#user
        form.form-horizontal#login(role='form' method='post')
            legend
                h1 Login
                .form-group
                    label.control-label.col-sm-2(for="username") Username:
                    .col-sm-10
                        input.form-control(type='text' id="username" name="username" placeholder='Enter Username')
                .form-group
                    label.control-label.col-sm-2(for="password") Password:
                    .col-sm-10
                        input.form-control(type='password' id="password" name="password" placeholder='Password')
                .form-group
                    button.btn.btn-primary(type='submit') Submit

                    a(href='/register')
                      button.btn.btn-default(type="button") Register

                p#error.error
    form.form-horizontal(role='form' id='eventForm' action="/events" method="post")
        legend
            h1 Add a Networking Event!
            .form-group
                label.control-label.col-sm-2(for="eventName") Event Name:
                .col-sm-10
                    input.form-control(type='text' name="eventName" id="eventName" placeholder='Enter Event Name' require="true")
            .form-group
                label.control-label.col-sm-2(for="eventDes") Event Description:
                .col-sm-10
                    input.form-control(type='text' name="eventDes" id="eventDes" placeholder='Enter Event Description Here')
            .form-group
                label.control-label.col-sm-2(for="location") Location:
                .col-sm-10
                    input.form-control(type='text' name="location" id="location" placeholder='Enter Location')
            .form-group
                label.control-label.col-sm-2(for="date") Date:
                .col-sm-10
                    input.form-control(type='date' name="date" id="date" placeholder='Enter Date')
            .form-group
                label.control-label.col-sm-2(for="time") Time:
                .col-sm-10
                    input.form-control(type='time' name="time" id="time" placeholder='Enter Event Time Here')
            .form-group
                button.btn.btn-primary(type='submit') Submit
                button.btn.btn-default(type="button") Cancel
            p#error.error